<header>
  <div class="container">
      <img src="/../images/logo.png" id="logo" alt="FrankenKopter Logo">
  </div>
  <nav class="nav-admin">
    <ul>
      <li><a href="/admin">Home</a></li>
      <li><a href="/admin/emails">Emails</a></li>
      <li><a href="/admin/testimonials">Testimonials</a></li>
      <li><a href="/logout">Log Out</a></li>
    </ul>
  </nav>
</header>
<main class="single-testimonial">
  <section>
    <form action="/admin/testimonials/edit/<%= @testimonial[:id] %>" method="post">
      <dl class="third">
        <dt>First Name</dt>
        <dd><%= @testimonial[:first_name].capitalize %></dd>
      </dl>
      <dl class="third">
        <dt>Last Name</dt>
        <dd><%= @testimonial[:last_name].capitalize %></dd>
      </dl>
      <dl class="third">
        <dt>Email Address</dt>
        <dd><%= @testimonial[:email] %></dd>
      </dl>
      <dl>
        <dt>Submitted</dt>
        <dd><%= @testimonial[:submitted] %></dd>
      </dl>
      <dl>
        <dt>Published</dt>
        <dd class="published"><%= @testimonial[:published] %></dd>
      </dl>
      <dl>
        <dt class="centered">Testimonial</dt>
        <dd><textarea name="message" rows="8" cols="80"><%= @testimonial[:body] %></textarea></dd>
      </dl>
      <div class="actions">
        <input class="btn" type="submit" name="edit" value="Update">
        <a class="btn" href="/admin/testimonials/edit/<%= @testimonial[:id] %>">Revert</a>
        <% if @testimonial[:published] == 'false' %>
          <input class="btn" type="submit" name="publish" value="Publish"
                 formaction="/admin/testimonials/publish/<%= @testimonial[:id] %>">
        <% end %>
        <a class="btn" href="/admin/testimonials">Cancel</a>
        <button class="btn danger" type="button" name="button">Delete</button>
      </div>
    </form>
  </section>
  <section>
    <div class="popup-overlay"></div>
    <div class="popup">
      <p>Are you sure you want to delete this testimonial?</p>
      <p>This action can't be undone!</p>
      <form action="/admin/testimonials/destroy/<%= @testimonial[:id] %>" method="post">
        <fieldset>
          <button class="btn" type="button" name="cancel">Cancel</button>
          <input class="btn danger" type="submit" name="delete" value="Delete">
        </fieldset>
      </form>
    </div>
  </section>
</main>
