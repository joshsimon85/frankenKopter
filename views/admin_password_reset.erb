<header>
    <img src="/../images/logo.png" id="logo" alt="FrankenKopter Logo">
    <nav class="nav-admin">
      <ul>
        <li><a href="/admin">Home</a></li>
        <li><a href="/admin/emails">Emails</a></li>
        <li><a href="/admin/testimonials">Testimonials</a></li>
        <li><a href="/logout">Log Out</a></li>
      </ul>
    </nav>
</header>
<main>
  <form class="admin-login" action="/admin/password_reset" method="post">
    <h1>Reset Your Password</h1>
    <dl>
      <dt><label for="user_name">User Name</label></dt>
      <dd>
        <input type="text" name="user_name" id="user_name"
               value="<%= session[:user_name] %>">
      </dd>
      <dt><label for="current_password">Password</label></dt>
      <dd><input type="password" name="password" id="current_password"></dd>
      <dt><label for="new_password">New Password</label></dt>
      <dd>
        <input type="password" name="new_password" id="new_password">
      </dd>
    </dl>
    <input type="submit" name="submit" value="Update Password">
  </form>
</main>
